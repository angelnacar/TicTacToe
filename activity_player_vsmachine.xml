<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/deslizar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pantalla"
    tools:context="com.example.angel.eltresenraya.Game">

    <TableLayout
        android:id="@+id/tablet"

        android:layout_width="294dp"
        android:layout_height="272dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow android:layout_height="84dp">
            android:id="@+id/filaUno"
            android:layout_width="match_parent"
            android:layout_height="match_parent"


            <ImageView
                android:id="@+id/unoUno"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:background="@drawable/cuadrado"
                android:onClick="onClick"

                />

            <ImageView
                android:id="@+id/unoDos"
                android:layout_width="99dp"
                android:layout_height="match_parent"
                android:background="@drawable/cuadrado"
                android:onClick="onClick" />

            <ImageView
                android:id="@+id/unoTres"
                android:layout_width="93dp"
                android:layout_height="match_parent"
                android:background="@drawable/cuadrado"
                android:onClick="onClick" />


        </TableRow>

        <TableRow>
            android:id="@+id/filaDos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="DuplicateIds">


            <ImageView
                android:id="@+id/dosUno"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cuadrado"
                android:onClick="onClick" />

            <ImageView
                android:id="@+id/dosDos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cuadrado"
                android:onClick="onClick" />

            <ImageView
                android:id="@+id/dosTres"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cuadrado"
                android:onClick="onClick" />


        </TableRow>

        <TableRow>
            android:id="@+id/filatres"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="DuplicateIds"


            <ImageView
                android:id="@+id/tresUno"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cuadrado"
                android:onClick="onClick" />

            <ImageView
                android:id="@+id/tresDos"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cuadrado"
                android:onClick="onClick" />

            <ImageView
                android:id="@+id/tresTres"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/cuadrado"
                android:onClick="onClick" />


        </TableRow>

        <ImageView android:id="@+id/dos"

            />
    </TableLayout>

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="94dp"
        android:layout_height="37dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.839"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tablet"
        app:srcCompat="@drawable/desliz" />

    <TextView
        android:id="@+id/reloj"
        android:layout_width="155dp"
        android:layout_height="66dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="00:00"
        android:background="#000000"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="48dp"
        app:layout_constraintBottom_toTopOf="@+id/tablet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.911"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47" />

</android.support.constraint.ConstraintLayout>
